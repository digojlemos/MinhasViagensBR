<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEditLocal"
            android:paddingLeft="20dp"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Local:"
            android:paddingTop="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEditViagem"
            android:layout_below="@id/labelEditLocal"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:fontFamily="casual"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEditDataViagem"
            android:paddingLeft="15dp"
            android:layout_below="@id/textEditViagem"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Data:"
            android:paddingTop="15dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/dataEditViagem"
            android:paddingLeft="10dp"
            android:layout_below="@id/textEditViagem"
            android:fontFamily="casual"
            android:textColor="#000"
            android:layout_toRightOf="@id/labelEditDataViagem"
            android:text="25/08/2017"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEditDiasViagem"
            android:paddingLeft="120dp"
            android:layout_below="@id/textEditViagem"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Dias: "
            android:layout_toRightOf="@id/dataEditViagem"
            android:paddingTop="15dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/diasEditViagem"
            android:paddingLeft="10dp"
            android:fontFamily="casual"
            android:textColor="#000"
            android:layout_toRightOf="@id/labelEditDiasViagem"
            android:layout_below="@id/textEditViagem"
            android:text="100"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEditHospedagem"
            android:paddingLeft="15dp"
            android:layout_below="@id/labelEditDataViagem"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Hospedagem:"
            android:paddingTop="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/localEditHospViagem"
            android:paddingLeft="20dp"
            android:layout_below="@id/labelEditHospedagem"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Pousada Suiá"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEditPasseios"
            android:paddingLeft="20dp"
            android:layout_below="@id/localEditHospViagem"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Passeios:"
            android:paddingTop="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passeiosEditViagem"
            android:paddingLeft="20dp"
            android:layout_below="@id/labelEditPasseios"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Praia do forno, Ilha do Farol, Praia Grande, Pontal do Atalaia e Prainhas"
            android:textSize="20sp"
            android:lines="1"
            android:nestedScrollingEnabled="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEditDescricao"
            android:paddingLeft="20dp"
            android:layout_below="@id/passeiosEditViagem"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Descrição:"
            android:paddingTop="20dp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/descEditViagem"
            android:paddingLeft="20dp"
            android:layout_below="@id/labelEditDescricao"
            android:fontFamily="casual"
            android:textColor="#000"
            android:text="Hospedagem próximo ao centro da cidade, estando próximo de pizzaria e restaurantes, ao lado de operadoras de mergulho, passeio de barco feito com o pessoal da pousada no barco Holândes Voador, Feito duas imerssões de mergulho com a escola ao lado da pousada, no dia feito duas imersões na praia do anequim, por do sol na Praia Grande lindíssimo, da próximavísita conhecer o Pontoal do Atalaia e observar o por sol no mesmo."
            android:textSize="20sp"
            android:nestedScrollingEnabled="true"
            />


    </RelativeLayout>  </ScrollView>